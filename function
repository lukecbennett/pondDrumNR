// Guard node before ui_chart
// Only forward messages that look like proper chart data:
//   msg.labels = array of strings (x-axis categories)
//   msg.payload = array of numbers (y-axis values)
if (!msg.labels || !Array.isArray(msg.labels)) {
   node.warn("Dropped message: no labels array");
   return null;
}
if (!msg.payload || !Array.isArray(msg.payload)) {
   node.warn("Dropped message: no payload array");
   return null;
}
// Check that every payload element is a number
for (let i = 0; i < msg.payload.length; i++) {
   if (typeof msg.payload[i] !== "number" || !isFinite(msg.payload[i])) {
       node.warn("Dropped message: payload contains non-numeric value");
       return null;
   }
}
// Passed all checks â†’ send on to ui_chart
return msg;
